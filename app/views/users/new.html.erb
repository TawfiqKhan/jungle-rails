<!-- app/views/users/new.html.erb -->

<h1>Signup!</h1>

<div class="row">
  <div class="col-sm-6 col-sm-offset-1">
    <%= form_for @user, controller: 'users', action: 'create' do |form| %>
    <!-- prettier-ignore -->
    <% if form.object.errors.any? %>
    <div class="alert alert-danger">
      <strong>The following errors prevented saving:</strong>
      <ul>
        <% form.object.errors.full_messages.each do |error| %>
        <li><%= error %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <!-- prettier-ignore -->
    <div class="form-group">
      <%= form.label :first_name %> <%= form.text_field :first_name, class:
      'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :last_name %> <%= form.text_field:last_name, class:
      'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :email %> <%= form.text_field :email, class: 'form-control'
      %>
    </div>

    <div class="form-group">
      <%= form.label :password %> <%= form.password_field :password, class:
      'form-control' %>
    </div>

    <!-- prettier-ignore -->
    <div class="form-group">
      <%= form.label :password_confirmation %> <%= form.password_field :password_confirmation, class: 
      'form-control' %>
    </div>
    <!-- prettier-ignore -->

    <%= form.submit 'Signup', class: 'btn btn-primary' %> <% end %>
  </div>
</div>
